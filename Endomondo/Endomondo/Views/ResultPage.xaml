<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Endomondo.Views.ResultPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:infrastructure="clr-namespace:Endomondo.Infrastructure;assembly=Endomondo"
    xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True">

    <infrastructure:CustomMap CustomPolyline="{Binding Polyline}">
        <x:Arguments>
            <maps:MapSpan>
                <x:Arguments>
                    <maps:Position>
                        <x:Arguments>
                            <x:Double>51.990272</x:Double>
                            <x:Double>22.793863</x:Double>
                        </x:Arguments>
                    </maps:Position>
                    <x:Double>0.1</x:Double>
                    <x:Double>0.1</x:Double>
                </x:Arguments>
            </maps:MapSpan>
        </x:Arguments>
    </infrastructure:CustomMap>
</ContentPage>